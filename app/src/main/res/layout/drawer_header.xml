<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blanco"
    android:padding="16dp">

    <!-- Cierre (X) -->
    <ImageView
        android:id="@+id/close_drawer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_close"
        app:tint="@color/marron_texto"
        android:contentDescription="Cerrar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título -->
    <TextView
        android:id="@+id/drawer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menú"
        android:textColor="@color/marron_texto"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/close_drawer"
        app:layout_constraintBottom_toBottomOf="@id/close_drawer"
        android:fontFamily="@font/flamante_round_bold" />

    <!-- Ícono grande abajo -->
    <ImageView
        android:id="@+id/drawer_logo_bottom"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/tenori_icon"
        android:contentDescription="Logo grande"
        app:layout_constraintTop_toBottomOf="@id/close_drawer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
