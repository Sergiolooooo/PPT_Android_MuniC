<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <!-- Imagen del comercio -->
    <ImageView
        android:id="@+id/imgComercio"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_default"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <!-- Nombre del comercio -->
    <TextView
        android:id="@+id/tvNombreComercio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del comercio"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/marron_texto"
        app:layout_constraintStart_toEndOf="@id/imgComercio"
        app:layout_constraintTop_toTopOf="@id/imgComercio"
        android:layout_marginStart="10dp"/>

    <!-- TelÃ©fono del comercio -->
    <TextView
        android:id="@+id/tvTelefonoComercio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="88888888"
        android:textSize="14sp"
        android:textColor="@color/marron_texto"
        app:layout_constraintStart_toEndOf="@id/imgComercio"
        app:layout_constraintTop_toBottomOf="@id/tvNombreComercio"
        android:layout_marginStart="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
