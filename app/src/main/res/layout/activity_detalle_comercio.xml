<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_fondo">

    <!-- Contenedor superior con fondo blanco -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contenedorSuperior"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/blanco"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Botón de menú -->
        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_menu"
            app:tint="@color/marron_texto"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Botón de cerrar -->
        <ImageView
            android:id="@+id/btn_cerrar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            app:tint="@color/marron_texto"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Icono del comercio -->
        <ImageView
            android:id="@+id/iconoComercio"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_categoria"
            android:padding="6dp"
            android:elevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/menu_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Contenedor verde con esquinas redondeadas -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contenedorVerde"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_redondeado_abajo"
        app:layout_constraintTop_toBottomOf="@id/contenedorSuperior"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Nombre del comercio -->
        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Comercio"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/blanco"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción del comercio"
            android:textSize="16sp"
            android:textColor="@color/blanco"
            app:layout_constraintTop_toBottomOf="@id/tvNombre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Contenedor para el mapa con bordes redondeados -->
        <androidx.cardview.widget.CardView
            android:id="@+id/mapContainer"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:cardCornerRadius="125dp"
            android:elevation="4dp"
            app:cardBackgroundColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/tvDescripcion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToOutline="true"/>
        </androidx.cardview.widget.CardView>

        <!-- Texto "Video de YouTube" -->
        <TextView
            android:id="@+id/tvVideoYoutube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video de YouTube"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/blanco"
            app:layout_constraintBottom_toTopOf="@id/thumbnailYouTube"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"/>

        <!-- Miniatura de YouTube -->
        <ImageView
            android:id="@+id/thumbnailYouTube"
            android:layout_width="230dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:contentDescription="Miniatura del video"
            android:src="@drawable/img_youtube_default"
            app:layout_constraintTop_toBottomOf="@id/mapContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"/>

        <!-- Teléfono -->
        <TextView
            android:id="@+id/tvTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/blanco"
            app:layout_constraintTop_toBottomOf="@id/thumbnailYouTube"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
